#!/usr/bin/make -f

#export DH_VERBOSE=1
CFLAGS := $(shell dpkg-buildflags --get CFLAGS)
LDFLAGS := $(shell dpkg-buildflags --get LDFLAGS)
WITH_SPDY := $(shell printf "Source: tengine\nBuild-Depends: libssl-dev (>= 1.0.1)\n" | \
	dpkg-checkbuilddeps - >/dev/null 2>&1 && \
	echo "--with-http_spdy_module")

%:
	dh $@ 

override_dh_auto_configure:
	./configure \
		--prefix=/opt/ \
		--includedir=/opt/include/nginx \
		--sbin-path=/opt/sbin/nginx \
		--conf-path=/opt/etc/nginx/nginx.conf \
		--error-log-path=/data/log/nginx/error.log \
		--http-log-path=/data/log/nginx/access.log \
		--pid-path=/opt/run//nginx.pid \
		--lock-path=/opt/run//nginx.lock \
		--http-client-body-temp-path=/data/cache/nginx/client_temp \
		--http-proxy-temp-path=/data/cache/nginx/proxy_temp \
		--http-fastcgi-temp-path=/data/cache/nginx/fastcgi_temp \
		--http-uwsgi-temp-path=/data/cache/nginx/uwsgi_temp \
		--http-scgi-temp-path=/data/cache/nginx/scgi_temp \
		--user=nginx \
		--group=nginx \
		--with-http_ssl_module \
		--with-http_realip_module \
		--with-http_addition_module \
		--with-http_sub_module \
		--with-http_dav_module \
		--with-http_flv_module \
		--with-http_mp4_module \
		--with-http_gunzip_module \
		--with-http_gzip_static_module \
		--with-http_random_index_module \
		--with-http_secure_link_module \
		--with-http_stub_status_module \
		--with-mail \
		--with-mail_ssl_module \
		--with-file-aio \
		--with-http_lua_module \
		--with-luajit-inc=/opt/include/luajit-2.0/ \
		--with-luajit-lib=/opt/lib/ \
		$(WITH_SPDY) \
		--with-cc-opt="$(CFLAGS)" \
		--with-ld-opt="$(LDFLAGS)" \
		--with-ipv6

override_dh_strip:
	dh_strip


override_dh_auto_test:
override_dh_shlibdeps:
	dh_shlibdeps -l/opt/lib:/opt/lib64:/usr/local/lib:/usr/local/lib64:/usr/lib:/usr/lib64:/lib/:/lib64

override_dh_installinit:
	dh_installinit --init-script=nginx

override_dh_auto_install:
	dh_auto_install
	/usr/bin/install -m 644 debian/nginx.conf debian/tengine/opt/etc/nginx/
	/usr/bin/install -m 644 conf/win-utf debian/tengine/opt/etc/nginx/
	/usr/bin/install -m 644 conf/koi-utf debian/tengine/opt/etc/nginx/
	/usr/bin/install -m 644 conf/koi-win debian/tengine/opt/etc/nginx/
	/usr/bin/install -m 644 conf/mime.types debian/tengine/opt/etc/nginx/
	/usr/bin/install -m 644 conf/scgi_params debian/tengine/opt/etc/nginx/
	/usr/bin/install -m 644 conf/fastcgi_params debian/tengine/opt/etc/nginx/
	/usr/bin/install -m 644 conf/uwsgi_params debian/tengine/opt/etc/nginx/
	/usr/bin/install -m 644 html/index.html debian/tengine/opt/share/nginx/html/
	/usr/bin/install -m 644 html/50x.html debian/tengine/opt/share/nginx/html/
	/usr/bin/install -m 644 debian/nginx.vh.default.conf debian/tengine/opt/etc/nginx/conf.d/default.conf
	/usr/bin/install -m 644 debian/nginx.vh.example_ssl.conf debian/tengine/opt/etc/nginx/conf.d/example_ssl.conf
	/usr/bin/install -m 755 objs/nginx  debian/tengine/opt/sbin/

